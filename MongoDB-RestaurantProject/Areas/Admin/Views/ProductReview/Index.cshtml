@using MongoDB_RestaurantProject.DataTransferObject.ProductReviewDTOs
@model List<ResultProductReviewDTO>

@{
    ViewData["Title"] = "Ürün Yorumları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative min-h-screen">

    <div class="absolute top-0 right-0 w-96 h-96 bg-primary opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform translate-x-1/2 -translate-y-1/2"></div>

    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4 relative z-10">
        <div>
            <div class="flex items-center gap-3">
                <a href="/Admin/Product/Index"
                   class="p-2 rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-primary hover:text-white transition duration-300 shadow-sm">
                    <span class="material-icons-outlined block">arrow_back</span>
                </a>
                <h2 class="font-display text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
                    Ürün Değerlendirmeleri
                </h2>
            </div>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 pl-14">
                Bu ürüne ait kullanıcı yorumlarını ve puanlarını buradan yönetebilirsiniz.
            </p>
        </div>

        <div class="bg-white dark:bg-gray-800 px-6 py-3 rounded-2xl shadow-lg shadow-primary/5 border border-gray-100 dark:border-gray-700 flex items-center gap-4">
            <div class="p-3 bg-blue-50 dark:bg-blue-900/20 rounded-xl text-blue-600 dark:text-blue-400">
                <span class="material-icons-outlined">reviews</span>
            </div>
            <div>
                <p class="text-xs text-gray-500 dark:text-gray-400 font-medium uppercase tracking-wide">Toplam Yorum</p>
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">@Model.Count</h4>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 relative z-10 pb-10">
            @foreach (var item in Model)
            {
                <div class="group bg-white dark:bg-gray-800 rounded-3xl p-6 shadow-sm hover:shadow-xl transition duration-300 border border-gray-100 dark:border-gray-700 flex flex-col relative overflow-hidden">

                    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary/40 to-transparent"></div>

                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div class="h-12 w-12 rounded-2xl bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 text-gray-600 dark:text-gray-200 flex items-center justify-center font-bold text-xl shadow-inner">
                                @(string.IsNullOrEmpty(item.NameSurname) ? "?" : item.NameSurname.Substring(0, 1).ToUpper())
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 dark:text-white text-base">@item.NameSurname</h3>
                                <p class="text-xs text-gray-500 dark:text-gray-400">@item.Email</p>
                            </div>
                        </div>

                        <span class="text-xs font-medium text-gray-400 bg-gray-50 dark:bg-gray-700/50 px-2 py-1 rounded-lg border border-gray-100 dark:border-gray-600">
                            @item.CreatedAt.ToString("dd.MM.yyyy")
                        </span>
                    </div>

                    <div class="flex items-center gap-1 mb-4">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= item.Star)
                            {
                                <span class="material-icons-round text-yellow-400 text-xl">star</span>
                            }
                            else
                            {
                                <span class="material-icons-round text-gray-200 dark:text-gray-600 text-xl">star</span>
                            }
                        }
                        <span class="ml-2 text-sm font-bold text-gray-700 dark:text-gray-300">(@item.Star/5)</span>
                    </div>

                    <div class="flex-grow">
                        <div class="relative">
                            <span class="absolute -top-2 -left-1 text-4xl text-gray-200 dark:text-gray-700 font-serif leading-none opacity-50">“</span>
                            <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed pl-4 line-clamp-4 italic">
                                @item.Comment
                            </p>
                        </div>
                    </div>

                    <div class="mt-6 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-end">
                        <a href="/Admin/ProductReview/DeleteReview/@item.Id"
                           onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?')"
                           class="flex items-center gap-2 px-4 py-2 rounded-xl bg-red-50 hover:bg-red-100 dark:bg-red-900/20 dark:hover:bg-red-900/40 text-red-600 dark:text-red-400 transition text-sm font-semibold group-hover:pr-5">
                            <span class="material-icons-outlined text-lg">delete_outline</span>
                            <span>Yorumu Sil</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="flex flex-col items-center justify-center min-h-[400px] text-center p-8 bg-white dark:bg-gray-800 rounded-3xl border border-dashed border-gray-300 dark:border-gray-700 relative z-10">
            <div class="w-20 h-20 bg-gray-50 dark:bg-gray-700 rounded-full flex items-center justify-center mb-4">
                <span class="material-icons-outlined text-4xl text-gray-400">rate_review</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Henüz Yorum Yok</h3>
            <p class="text-gray-500 dark:text-gray-400 max-w-sm mx-auto mb-6">
                Bu ürün için henüz bir değerlendirme yapılmamış.
            </p>
            <a href="/Admin/Product/Index" class="text-primary hover:text-primary-dark font-medium hover:underline transition">
                Ürün Listesine Dön
            </a>
        </div>
    }
</div>