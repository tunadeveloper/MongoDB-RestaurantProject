@{
    ViewData["Title"] = "Genel Bakış";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet">
<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative min-h-screen">

    <div class="absolute top-0 right-0 w-96 h-96 bg-primary opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-purple-500 opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform -translate-x-1/2 translate-y-1/2"></div>

    <div class="mb-8 relative z-10">
        <h2 class="font-display text-3xl font-bold text-gray-900 dark:text-white">Genel Bakış</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Restoranınızın anlık durumunu ve istatistiklerini buradan takip edin.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 relative z-10 mb-10">

        <div class="group bg-gradient-to-br from-orange-400 to-red-500 rounded-3xl p-6 shadow-lg shadow-orange-500/20 text-white relative overflow-hidden transition transform hover:scale-[1.02]">
            <div class="absolute top-0 right-0 p-4 opacity-10">
                <span class="material-icons text-8xl">restaurant_menu</span>
            </div>
            <div class="relative z-10">
                <div class="flex justify-between items-start">
                    <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm">
                        <span class="material-icons-outlined text-2xl">lunch_dining</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h3 class="text-4xl font-bold">@ViewBag.TotalProducts</h3>
                    <p class="text-white/80 font-medium">Toplam Ürün</p>
                </div>
                <div class="mt-4 pt-4 border-t border-white/20 flex items-center gap-2 text-sm text-white/90">
                    <span class="material-icons-outlined text-sm">payments</span>
                    <span>Ort. Fiyat: <strong>@ViewBag.AvgPrice ₺</strong></span>
                </div>
            </div>
        </div>

        <div class="group bg-gradient-to-br from-blue-400 to-indigo-600 rounded-3xl p-6 shadow-lg shadow-blue-500/20 text-white relative overflow-hidden transition transform hover:scale-[1.02]">
            <div class="absolute top-0 right-0 p-4 opacity-10">
                <span class="material-icons text-8xl">event_seat</span>
            </div>
            <div class="relative z-10">
                <div class="flex justify-between items-start">
                    <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm">
                        <span class="material-icons-outlined text-2xl">event</span>
                    </div>
                    @if (ViewBag.PendingReservations > 0)
                    {
                        <span class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-lg animate-pulse">
                            @ViewBag.PendingReservations Bekleyen
                        </span>
                    }
                </div>
                <div class="mt-4">
                    <h3 class="text-4xl font-bold">@ViewBag.TotalReservations</h3>
                    <p class="text-white/80 font-medium">Toplam Rezervasyon</p>
                </div>
                <div class="mt-4 pt-4 border-t border-white/20 flex items-center gap-2 text-sm text-white/90">
                    <span class="material-icons-outlined text-sm">check_circle</span>
                    <span>Onaylanan: <strong>@ViewBag.ApprovedReservations</strong></span>
                </div>
            </div>
        </div>

        <div class="group bg-gradient-to-br from-purple-400 to-pink-500 rounded-3xl p-6 shadow-lg shadow-purple-500/20 text-white relative overflow-hidden transition transform hover:scale-[1.02]">
            <div class="absolute top-0 right-0 p-4 opacity-10">
                <span class="material-icons text-8xl">mail</span>
            </div>
            <div class="relative z-10">
                <div class="flex justify-between items-start">
                    <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm">
                        <span class="material-icons-outlined text-2xl">email</span>
                    </div>
                    @if (ViewBag.UnreadMessages > 0)
                    {
                        <span class="bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-lg">
                            @ViewBag.UnreadMessages Yeni
                        </span>
                    }
                </div>
                <div class="mt-4">
                    <h3 class="text-4xl font-bold">@ViewBag.TotalMessages</h3>
                    <p class="text-white/80 font-medium">Gelen Mesaj</p>
                </div>
                <div class="mt-4 pt-4 border-t border-white/20 flex items-center gap-2 text-sm text-white/90">
                    <span class="material-icons-outlined text-sm">mark_email_unread</span>
                    <span>Okunmamış: <strong>@ViewBag.UnreadMessages</strong></span>
                </div>
            </div>
        </div>

        <div class="group bg-gradient-to-br from-emerald-400 to-teal-600 rounded-3xl p-6 shadow-lg shadow-emerald-500/20 text-white relative overflow-hidden transition transform hover:scale-[1.02]">
            <div class="absolute top-0 right-0 p-4 opacity-10">
                <span class="material-icons text-8xl">star</span>
            </div>
            <div class="relative z-10">
                <div class="flex justify-between items-start">
                    <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm">
                        <span class="material-icons-outlined text-2xl">reviews</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h3 class="text-4xl font-bold">@ViewBag.AvgRating</h3>
                    <p class="text-white/80 font-medium">Ortalama Puan</p>
                </div>
                <div class="mt-4 pt-4 border-t border-white/20 flex items-center gap-2 text-sm text-white/90">
                    <span class="material-icons-outlined text-sm">comment</span>
                    <span>Toplam Yorum: <strong>@ViewBag.TotalReviews</strong></span>
                </div>
            </div>
        </div>

    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 relative z-10">

        <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-3xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
            <h3 class="font-bold text-gray-900 dark:text-white text-lg mb-4 flex items-center gap-2">
                <span class="material-icons-outlined text-primary">article</span>
                İçerik İstatistikleri
            </h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-2xl flex items-center gap-4">
                    <div class="w-12 h-12 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center">
                        <span class="material-icons-outlined">post_add</span>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@ViewBag.TotalBlogs</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Yayınlanan Blog</p>
                    </div>
                </div>

                <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-2xl flex items-center gap-4">
                    <div class="w-12 h-12 rounded-full bg-pink-100 text-pink-600 flex items-center justify-center">
                        <span class="material-icons-outlined">forum</span>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@ViewBag.TotalComments</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Blog Yorumu</p>
                    </div>
                </div>
            </div>

            <div class="mt-6 bg-primary/5 rounded-2xl p-4 border border-primary/10">
                <p class="text-sm text-gray-600 dark:text-gray-300">
                    <span class="font-bold text-primary">İpucu:</span> Düzenli içerik paylaşımı ve müşteri yorumlarına yanıt vermek, etkileşimi %40 oranında artırabilir.
                </p>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-3xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
            <h3 class="font-bold text-gray-900 dark:text-white text-lg mb-4 flex items-center gap-2">
                <span class="material-icons-outlined text-primary">bolt</span>
                Hızlı İşlemler
            </h3>

            <div class="space-y-3">
                <a href="/Admin/Product/Index" class="flex items-center justify-between p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50 hover:bg-primary hover:text-white dark:hover:bg-primary transition group cursor-pointer">
                    <div class="flex items-center gap-3">
                        <span class="material-icons-outlined text-gray-400 group-hover:text-white">add_circle</span>
                        <span class="font-medium text-gray-700 dark:text-gray-200 group-hover:text-white">Yeni Ürün Ekle</span>
                    </div>
                    <span class="material-icons-outlined text-sm text-gray-300 group-hover:text-white">chevron_right</span>
                </a>

                <a href="/Admin/Reservation/Index" class="flex items-center justify-between p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50 hover:bg-primary hover:text-white dark:hover:bg-primary transition group cursor-pointer">
                    <div class="flex items-center gap-3">
                        <span class="material-icons-outlined text-gray-400 group-hover:text-white">calendar_today</span>
                        <span class="font-medium text-gray-700 dark:text-gray-200 group-hover:text-white">Rezervasyonları Yönet</span>
                    </div>
                    <span class="material-icons-outlined text-sm text-gray-300 group-hover:text-white">chevron_right</span>
                </a>

                <a href="/Admin/Blog/Index" class="flex items-center justify-between p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50 hover:bg-primary hover:text-white dark:hover:bg-primary transition group cursor-pointer">
                    <div class="flex items-center gap-3">
                        <span class="material-icons-outlined text-gray-400 group-hover:text-white">edit</span>
                        <span class="font-medium text-gray-700 dark:text-gray-200 group-hover:text-white">Blog Yazısı Yaz</span>
                    </div>
                    <span class="material-icons-outlined text-sm text-gray-300 group-hover:text-white">chevron_right</span>
                </a>

                <a href="/Admin/Message/Index" class="flex items-center justify-between p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50 hover:bg-primary hover:text-white dark:hover:bg-primary transition group cursor-pointer">
                    <div class="flex items-center gap-3">
                        <span class="material-icons-outlined text-gray-400 group-hover:text-white">mail</span>
                        <span class="font-medium text-gray-700 dark:text-gray-200 group-hover:text-white">Mesajları Oku</span>
                    </div>
                    @if (ViewBag.UnreadMessages > 0)
                    {
                        <span class="bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded-full">@ViewBag.UnreadMessages</span>
                    }
                    else
                    {
                        <span class="material-icons-outlined text-sm text-gray-300 group-hover:text-white">chevron_right</span>
                    }
                </a>
            </div>
        </div>

    </div>
</div>