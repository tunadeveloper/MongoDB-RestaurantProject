            <div class="flex items-center gap-3">
                <div class="bg-white text-primary p-2 rounded-lg">
                    <span class="material-icons-round text-xl">restaurant_menu</span>
                </div>
                <span class="text-2xl font-display font-bold tracking-wide">FOODU</span>
            </div>
            <button onclick="toggleMobileSidebar()" class="ml-auto text-white/80 hover:text-white">
