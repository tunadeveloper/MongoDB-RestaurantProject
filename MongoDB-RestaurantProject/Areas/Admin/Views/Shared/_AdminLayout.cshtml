            <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/80 hover:bg-white/10 hover:text-white transition">
                <span class="material-icons-outlined mr-3">shopping_bag</span> Orders
            </a>
            <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/80 hover:bg-white/10 hover:text-white transition">
                <span class="material-icons-outlined mr-3">people</span> Customers
            </a>
            <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/80 hover:bg-white/10 hover:text-white transition">
                <span class="material-icons-outlined mr-3">settings</span> Settings
            </a>
        </nav>
        <div class="p-4 border-t border-white/10">
            <div class="flex items-center gap-3">
