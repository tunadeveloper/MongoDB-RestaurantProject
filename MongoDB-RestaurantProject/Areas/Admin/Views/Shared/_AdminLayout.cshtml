                        <p class="text-xs text-gray-500 dark:text-gray-400">Admin</p>
                    </div>
                    <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuDR8hfSU0ShiOfulsnW14psDkU-e0lTWKFX8utMp0CwON2O5rUdxoJluGCgRsbLAgEHDR6mB12K8J3nOtIa-EkfzuRWr-fmppyWHmxxtii5Q5hFsW2fwO9OfEs4F2l8F7zfuWf9UMbWRIxoz_UTTRqGmNZzurfOz2FcubJxZsodBgbP7Um6i4Ck_o8rqlZCyXNMqETafQsfcwPwbYzAqPdWyEt6SPj6QxHOYxE6T-0wlCC9xBLTESeT7ssryrIq-aaNv3Z9VuquoIs" alt="Admin Avatar" class="w-9 h-9 md:w-10 md:h-10 rounded-full object-cover border-2 border-primary cursor-pointer hover:opacity-80 transition">
                </div>
            </div>
        </header>


      @RenderBody()
    </main>

    <script>
        // --- 1. Mobile Sidebar Toggle Logic ---
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const mobileOverlay = document.getElementById('mobile-sidebar-overlay');

        function toggleMobileSidebar() {
            // Sidebar'ı kaydır
            mobileSidebar.classList.toggle('-translate-x-full');
            // Overlay'i göster/gizle
            if (mobileOverlay.classList.contains('hidden')) {
                mobileOverlay.classList.remove('hidden');
            } else {
                mobileOverlay.classList.add('hidden');
            }
        }

        // --- 2. Dark Mode Logic ---
        const themeToggleBtn = document.getElementById('theme-toggle');
        const themeIcon = themeToggleBtn.querySelector('span');

        themeToggleBtn.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');

            if (document.documentElement.classList.contains('dark')) {
                themeIcon.textContent = 'light_mode';
            } else {
                themeIcon.textContent = 'dark_mode';
            }
        });
    </script>
</body>
</html>