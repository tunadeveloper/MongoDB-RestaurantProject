
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>FOODU - Responsive Dashboard</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Oswald:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined|Material+Icons+Round" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#D70F21", // Ana Kırmızı
                        "primary-dark": "#b00c1b",
                        "background-light": "#F3F4F6",
                        "background-dark": "#121212",
                        "surface-light": "#FFFFFF",
                        "surface-dark": "#1E1E1E",
                        "card-dark": "#2C2C2C",
                        "sidebar-dark": "#2a0408",
                    },
                    fontFamily: {
                        sans: ["Inter", "sans-serif"],
                        display: ["Oswald", "sans-serif"],
                    },
                },
            },
        };
    </script>

    <style>
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 6px; height: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 3px; }
        .dark ::-webkit-scrollbar-thumb { background: #374151; }

        /* Toggle Switch Styles */
        .toggle-checkbox:checked { right: 0; border-color: #D70F21; }
        .toggle-checkbox:checked + .toggle-label { background-color: #D70F21; }

        /* Sidebar Gradient (Index 2'den alındı) */
        .sidebar-gradient {
            background: linear-gradient(180deg, #D70F21 0%, #4a040b 100%);
        }

        /* Gizleme class'ı */
        .hide-scrollbar::-webkit-scrollbar { display: none; }
        .hide-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-sans text-gray-800 dark:text-gray-200 h-screen overflow-hidden flex transition-colors duration-300">

    <div id="mobile-sidebar-overlay" class="fixed inset-0 bg-black/50 z-40 hidden transition-opacity" onclick="toggleMobileSidebar()"></div>

    <aside id="mobile-sidebar" class="fixed inset-y-0 left-0 w-64 sidebar-gradient text-white z-50 transform -translate-x-full transition-transform duration-300 flex flex-col shadow-2xl md:hidden">
