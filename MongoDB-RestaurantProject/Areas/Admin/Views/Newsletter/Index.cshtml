@using MongoDB_RestaurantProject.DataTransferObject.NewsletterDTOs
@model List<ResultNewsletterDTO>

@{
    ViewData["Title"] = "Bülten Aboneleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative">
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform translate-x-1/2 -translate-y-1/2"></div>

    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4 relative z-10">
        <div>
            <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white">Bülten Aboneleri</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Web sitesi bültenine kayıt olan e-posta adreslerini buradan yönetebilirsiniz.</p>
        </div>

        <div class="flex items-center gap-3">
            <div class="px-4 py-2 bg-white dark:bg-card-dark rounded-full border border-gray-200 dark:border-gray-700 shadow-sm flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                <span class="text-sm font-medium text-gray-600 dark:text-gray-300">Toplam Abone: <span class="text-gray-900 dark:text-white font-bold">@Model.Count</span></span>
            </div>
        </div>
    </div>

    <div class="bg-surface-light dark:bg-card-dark rounded-3xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden relative z-10">

        @if (Model.Count == 0)
        {
            <div class="flex flex-col items-center justify-center py-20 text-center">
                <div class="w-20 h-20 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-4">
                    <span class="material-icons-outlined text-4xl text-gray-400">mark_email_read</span>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Henüz Abone Yok</h3>
                <p class="text-gray-500 dark:text-gray-400 max-w-xs mx-auto mt-2">Bülteninize henüz kimse abone olmamış.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-600 dark:text-gray-300">
                    <thead class="bg-gray-50 dark:bg-gray-800/50 text-xs uppercase font-semibold text-gray-500 dark:text-gray-400 border-b border-gray-100 dark:border-gray-700">
                        <tr>
                            <th class="px-6 py-5">#</th>
                            <th class="px-6 py-5">E-Posta Adresi</th>
                            <th class="px-6 py-5 text-right">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors group">

                                <td class="px-6 py-4 w-16">
                                    <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center font-bold text-xs">
                                        @count
                                    </div>
                                </td>

                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <span class="material-icons-outlined text-gray-400">email</span>
                                        <span class="font-medium text-gray-900 dark:text-white select-all text-base">@item.Email</span>

                                        <button onclick="navigator.clipboard.writeText('@item.Email')"
                                                class="text-gray-300 hover:text-primary transition-colors opacity-0 group-hover:opacity-100"
                                                title="Kopyala">
                                            <span class="material-icons-outlined text-sm">content_copy</span>
                                        </button>
                                    </div>
                                </td>

                                <td class="px-6 py-4 text-right">
                                    <a href="/Admin/Newsletter/DeleteUser/@item.Id"
                                            class="inline-flex items-center justify-center gap-2 px-4 py-2 rounded-xl bg-white dark:bg-transparent border border-red-200 dark:border-red-900/30 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 hover:border-red-300 transition-all shadow-sm group-hover:shadow-md">
                                        <span class="material-icons-outlined text-lg">delete</span>
                                        <span class="font-medium">Aboneliği Sil</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>