@using MongoDB_RestaurantProject.DataTransferObject.AboutDTOs
@model CreateAboutDTO
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative">
    <div class="bg-surface-light dark:bg-card-dark rounded-3xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden relative z-10 max-w-3xl mx-auto">
        <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800/20">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white font-display">
                Yeni Hakkımızda İçeriği Ekle
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                Buradan yeni bir hakkımızda metni oluşturabilirsiniz.
            </p>
        </div>

        <form action="/Admin/About/CreateAbout" method="post" class="px-6 py-6 space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Başlık
                </label>
                <input type="text" name="Title"
                       class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800
                              text-gray-900 dark:text-white shadow-sm focus:border-primary focus:ring-primary
                              sm:text-sm py-3 px-4 transition-colors"
                       placeholder="Örn: Lezzetin Adresi">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Açıklama
                </label>
                <textarea name="Description" rows="4"
                          class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800
                                 text-gray-900 dark:text-white shadow-sm focus:border-primary focus:ring-primary
                                 sm:text-sm py-3 px-4 transition-colors"
                          placeholder="Restoran hakkında bilgileri buraya yazabilirsiniz..."></textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Görsel URL
                </label>
                <input type="text" name="ImageUrl"
                       class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800
                              text-gray-900 dark:text-white shadow-sm focus:border-primary focus:ring-primary
                              sm:text-sm py-3 px-4 transition-colors"
                       placeholder="https://...">
            </div>
            <div class="flex flex-row-reverse gap-3 pt-4 border-t border-gray-100 dark:border-gray-700">
                <button type="submit"
                        class="inline-flex w-full justify-center rounded-xl bg-primary px-5 py-2.5
                               text-sm font-semibold text-white shadow-sm hover:bg-primary-dark
                               sm:w-auto transition-transform hover:scale-105">
                    Kaydet
                </button>
            </div>

        </form>

    </div>
</div>
