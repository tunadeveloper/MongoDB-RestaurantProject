@using MongoDB_RestaurantProject.DataTransferObject.AdminDTOs
@model List<ResultAdminDTO>

@{
    ViewData["Title"] = "Admin Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative">
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform translate-x-1/2 -translate-y-1/2"></div>

    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4 relative z-10">
        <div>
            <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white">Admin Listesi</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Sistemdeki tüm admin kullanıcılarını yönetebilirsiniz.</p>
        </div>

        <div class="flex gap-3 w-full md:w-auto">
            <div class="relative flex-1 md:w-64">
                <span class="material-icons-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-lg">search</span>
                <input type="text" placeholder="Admin ara..." class="w-full pl-9 pr-4 py-2.5 rounded-full bg-white dark:bg-card-dark border border-gray-200 dark:border-gray-700 focus:ring-2 focus:ring-primary focus:border-primary text-sm shadow-sm transition-all" />
            </div>

            <button onclick="openCreateModal()" class="flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white px-6 py-2.5 rounded-full font-semibold shadow-lg shadow-primary/30 transition transform hover:scale-105 whitespace-nowrap">
                <span class="material-icons-outlined text-lg">add</span>
                <span class="hidden sm:inline">Yeni Admin</span>
            </button>
        </div>
    </div>

    <div class="bg-surface-light dark:bg-card-dark rounded-3xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden relative z-10">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-gray-600 dark:text-gray-300">
                <thead class="bg-gray-50 dark:bg-gray-800/50 text-xs uppercase font-semibold text-gray-500 dark:text-gray-400 border-b border-gray-100 dark:border-gray-700">
                    <tr>
                        <th class="px-6 py-5">Kullanıcı Adı</th>
                        <th class="px-6 py-5">Email</th>
                        <th class="px-6 py-5">Doğrulama</th>
                        <th class="px-6 py-5">Admin ID</th>
                        <th class="px-6 py-5 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 rounded-xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-primary shrink-0">
                                        <span class="material-icons-outlined text-xl">admin_panel_settings</span>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-gray-900 dark:text-white text-base">@item.Username</h4>
                                        <span class="text-xs text-gray-400">Sistem Yöneticisi</span>
                                    </div>
                                </div>
                            </td>

                            <td class="px-6 py-4">@item.Email</td>

                            <td class="px-6 py-4">
                                @if (item.IsVerified)
                                {
                                    <span class="px-3 py-1 text-xs font-semibold bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full">Doğrulandı</span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 text-xs font-semibold bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 rounded-full">Pasif</span>
                                }
                            </td>

                            <td class="px-6 py-4">
                                <span class="font-mono text-xs text-gray-500 bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded select-all">@item.Id</span>
                            </td>

                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <button onclick="openUpdateModal('@item.Id', '@item.Username', '@item.Email', '@item.IsVerified')"
                                            class="w-8 h-8 flex items-center justify-center rounded-lg text-gray-400 hover:text-primary hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors"
                                            title="Düzenle">
                                        <span class="material-icons-outlined text-lg">edit</span>
                                    </button>

                                    <a href="/Admin/Admin/DeleteAdmin/@item.Id" class="w-8 h-8 flex items-center justify-center rounded-lg text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors" title="Sil">
                                        <span class="material-icons-outlined text-lg">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="px-6 py-4 border-t border-gray-100 dark:border-gray-700 flex items-center justify-between">
            <p class="text-xs text-gray-500 dark:text-gray-400">
                Toplam <span class="font-bold text-gray-900 dark:text-white">@Model?.Count</span> kayıt
            </p>
            <div class="flex gap-2">
                <button class="px-3 py-1 text-xs font-medium rounded-md text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-800 disabled:opacity-50" disabled>Önceki</button>
                <button class="px-3 py-1 text-xs font-medium rounded-md text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-800">Sonraki</button>
            </div>
        </div>
    </div>
</div>

<div id="createModal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-gray-900/50 dark:bg-black/70 backdrop-blur-sm transition-opacity" onclick="closeModal()"></div>

    <div class="fixed inset-0 z-10 flex items-center justify-center p-4">
        <div class="bg-white dark:bg-card-dark rounded-2xl shadow-2xl w-full max-w-lg border border-gray-100 dark:border-gray-700">

            <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 flex justify-between items-center bg-gray-50/50 dark:bg-gray-800/20">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Yeni Admin Ekle</h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-300">
                    <span class="material-icons-round">close</span>
                </button>
            </div>

            <form action="/Admin/Admin/CreateAdmin" method="post">
                <div class="px-6 py-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Kullanıcı Adı</label>
                        <input name="Username" class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white py-3 px-4" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                        <input name="Email" type="email" class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white py-3 px-4" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Şifre</label>
                        <input name="Password" type="password" class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white py-3 px-4" />
                    </div>
                </div>

                <div class="px-6 py-4 bg-gray-50 dark:bg-gray-800/50 flex justify-end gap-3 border-t border-gray-100 dark:border-gray-700">
                    <button type="submit" class="bg-primary text-white px-5 py-2.5 rounded-xl hover:bg-primary-dark transition">Kaydet</button>
                    <button type="button" onclick="closeModal()" class="border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 px-5 py-2.5 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="updateModal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-gray-900/50 dark:bg-black/70 backdrop-blur-sm transition-opacity" onclick="closeModal()"></div>

    <div class="fixed inset-0 z-10 flex items-center justify-center p-4">
        <div class="bg-white dark:bg-card-dark rounded-2xl shadow-2xl w-full max-w-lg border border-gray-100 dark:border-gray-700">

            <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 flex justify-between items-center bg-gray-50/50 dark:bg-gray-800/20">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Admin Güncelle</h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-300">
                    <span class="material-icons-round">close</span>
                </button>
            </div>

            <form action="/Admin/Admin/UpdateAdmin" method="post">
                <div class="px-6 py-6 space-y-4">
                    <input type="hidden" name="Id" />

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Kullanıcı Adı</label>
                        <input name="Username" id="uUsername" class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white py-3 px-4" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                        <input name="Email" id="uEmail" type="email" class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white py-3 px-4" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Doğrulama</label>
                        <select name="IsVerified" id="uVerified" class="block w-full rounded-xl border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white py-3 px-4">
                            <option value="true">Doğrulandı</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                </div>

                <div class="px-6 py-4 bg-gray-50 dark:bg-gray-800/50 flex justify-end gap-3 border-t border-gray-100 dark:border-gray-700">
                    <button type="submit" class="bg-primary text-white px-5 py-2.5 rounded-xl hover:bg-primary-dark transition">Kaydet</button>
                    <button type="button" onclick="closeModal()" class="border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 px-5 py-2.5 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const createModal = document.getElementById('createModal');
    const updateModal = document.getElementById('updateModal');

    function openCreateModal() {
        createModal.classList.remove('hidden');
    }

    function openUpdateModal(id, username, email, verified) {
        updateModal.querySelector('input[name="Id"]').value = id;
        document.getElementById("uUsername").value = username;
        document.getElementById("uEmail").value = email;
        document.getElementById("uVerified").value = verified.toLowerCase();
        updateModal.classList.remove('hidden');
    }

    function closeModal() {
        createModal.classList.add('hidden');
        updateModal.classList.add('hidden');
    }

    document.addEventListener('keydown', function (e) {
        if (e.key === "Escape") closeModal();
    });
</script>
