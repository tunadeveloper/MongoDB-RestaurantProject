@using MongoDB_RestaurantProject.DataTransferObject.ProductDTOs
@model List<ResultProductDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative">
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform translate-x-1/2 -translate-y-1/2"></div>

    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-4 relative z-10">
        <div class="flex gap-2 overflow-x-auto w-full md:w-auto pb-2 md:pb-0 hide-scrollbar">
            <button class="px-5 md:px-6 py-2 rounded-full bg-primary text-white font-medium shadow-lg shadow-primary/30 transition hover:bg-primary-dark whitespace-nowrap">All Items</button>
        </div>

        <button onclick="openProductModal()" class="flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white px-6 py-2.5 rounded-full font-semibold shadow-lg shadow-primary/30 transition transform hover:scale-105 whitespace-nowrap">
            <span class="material-icons-outlined text-lg">add</span>
            <span class="hidden sm:inline">Yeni Ürün</span>
        </button>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-8 relative z-10 pb-10">

        @foreach (var item in Model)
        {
            <div class="group bg-surface-light dark:bg-card-dark rounded-3xl p-4 shadow-sm hover:shadow-xl transition duration-300 border border-transparent hover:border-gray-100 dark:hover:border-gray-600 flex flex-col">

                <div class="relative h-48 rounded-2xl overflow-hidden mb-4">
                    <img src="@item.ImageUrl"
                         alt="@item.ProductName"
                         class="w-full h-full object-cover group-hover:scale-110 transition duration-500" />

                    <span class="absolute top-3 right-3 bg-white/90 dark:bg-black/80 backdrop-blur-sm px-2 py-1 rounded-lg text-xs font-bold uppercase tracking-wider text-gray-800 dark:text-gray-200 shadow-sm">
                        @item.CategoryName
                    </span>
                </div>

                <div class="flex justify-between items-start mb-2">
                    <h3 class="font-display text-xl font-bold text-gray-900 dark:text-white leading-tight">
                        @item.ProductName
                    </h3>

                    <button class="text-gray-400 hover:text-primary transition">
                        <span class="material-icons-outlined">more_vert</span>
                    </button>
                </div>

                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4 line-clamp-2">
                    @item.Description
                </p>

                <div class="mt-auto flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700">

                    <span class="font-display text-2xl font-bold text-primary">
                        $@item.PriceFull
                    </span>

                    <div class="flex items-center gap-2">
                        <label class="text-xs font-medium text-gray-400">Available</label>
                        <div class="relative inline-block w-10 mr-2 align-middle select-none">
                        <input type="checkbox" class="toggle-checkbox absolute block w-5 h-5 rounded-full bg-white border-4 appearance-none cursor-pointer checked:right-0 checked:border-primary border-gray-300 dark:border-gray-600" @(item.IsAvailable ? "checked" : "") />
                        <label class="toggle-label block overflow-hidden h-5 rounded-full bg-gray-300 dark:bg-gray-700 cursor-pointer transition-colors duration-200"></label>
                    </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div id="productModal" class="hidden fixed inset-0 z-50 flex items-center justify-center">

    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm"
         onclick="closeProductModal()"></div>

    <div class="relative bg-white dark:bg-gray-800 w-full max-w-lg rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700">

        <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white">Yeni Ürün Ekle</h3>

            <button onclick="closeProductModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <span class="material-icons-round">close</span>
            </button>
        </div>

        <form action="/Admin/Product/CreateProduct" method="post">
            <div class="px-6 py-6 space-y-6">

                <div>
                    <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Ürün Adı</label>
                    <input type="text" name="ProductName" required
                           class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4 focus:ring-primary focus:border-primary"
                           placeholder="Tavuk Şiş, Hamburger...">
                </div>

                <div>
                    <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Açıklama</label>
                    <textarea name="Description" rows="3"
                              class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4 focus:ring-primary focus:border-primary"
                              placeholder="Ürün açıklaması..."></textarea>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Görsel URL</label>
                        <input type="text" name="ImageUrl"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="https://...">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Kategori ID</label>
                        <input type="text" name="CategoryId"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="Kategori ID">
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Ağırlık</label>
                        <input type="text" name="Weight"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="250g">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Boyutlar</label>
                        <input type="text" name="Dimensions"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="20x10cm">
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Yarım Fiyat</label>
                        <input type="number" step="0.01" name="PriceHalf"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="0.00">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Tam Fiyat</label>
                        <input type="number" step="0.01" name="PriceFull"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="0.00">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">İçindekiler</label>
                        <input type="text" name="Ingredients"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4"
                               placeholder="Domates, Peynir...">
                    </div>
                </div>

                <label class="flex items-center gap-3 text-gray-700 dark:text-gray-300">
                    <input type="checkbox" name="IsPopular" class="h-5 w-5">
                    Popüler olarak işaretle
                </label>

            </div>
            <div class="px-6 py-4 bg-gray-100 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600 flex justify-end gap-3">
                <button type="button"
                        onclick="closeProductModal()"
                        class="px-5 py-2.5 rounded-lg border border-gray-300 dark:border-gray-500 text-sm">
                    İptal
                </button>

                <button type="submit"
                        class="px-5 py-2.5 rounded-lg bg-primary text-white shadow-md text-sm">
                    Kaydet
                </button>
            </div>

        </form>
    </div>
</div>

<script>
    function openProductModal() {
        document.getElementById('productModal').classList.remove('hidden');
    }
    function closeProductModal() {
        document.getElementById('productModal').classList.add('hidden');
    }
    document.addEventListener('keydown', e => {
        if (e.key === "Escape") closeProductModal();
    });
</script>

<script>
    const modal = document.getElementById('productModal');

    function openProductModal() {
        modal.classList.remove('hidden');
    }

    function closeProductModal() {
        modal.classList.add('hidden');
    }

    document.addEventListener('keydown', e => {
        if (e.key === "Escape") closeProductModal();
    });
</script>
