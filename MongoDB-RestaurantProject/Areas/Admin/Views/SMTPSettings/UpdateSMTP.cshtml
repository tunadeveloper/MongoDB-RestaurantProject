@using MongoDB_RestaurantProject.Context.Entities
@model SmtpSettings
@{
    ViewData["Title"] = "SMTP Ayarları Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-10 relative min-h-screen flex flex-col items-center justify-center">

    <div class="absolute top-0 right-0 w-96 h-96 bg-primary opacity-5 dark:opacity-10 rounded-full blur-3xl pointer-events-none -z-0 transform translate-x-1/2 -translate-y-1/2"></div>

    <div class="w-full max-w-2xl relative z-10">

        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 text-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-sm">
                <span class="material-icons-outlined text-3xl">settings_suggest</span>
            </div>
            <h2 class="font-display text-3xl font-bold text-gray-900 dark:text-white">Ayarları Güncelle</h2>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Mevcut SMTP yapılandırmasını düzenliyorsunuz.</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden relative">

            <div class="absolute top-0 right-0 m-4">
                <span class="bg-green-100 text-green-700 text-xs font-bold px-3 py-1 rounded-full flex items-center gap-1 border border-green-200">
                    <span class="w-2 h-2 bg-green-500 rounded-full"></span> Aktif Kayıt
                </span>
            </div>

            <form action="/Admin/SMTPSettings/UpdateSMTP" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="p-8 space-y-6">

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">SMTP Sunucu (Host)</label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="material-icons-outlined text-gray-400 text-xl">dns</span>
                                </span>
                                <input type="text" name="Host" value="@Model.Host" required
                                       class="w-full pl-10 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4 focus:ring-2 focus:ring-primary/50 focus:border-primary transition outline-none">
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">Port</label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="material-icons-outlined text-gray-400 text-xl">numbers</span>
                                </span>
                                <input type="number" name="Port" value="@Model.Port" required
                                       class="w-full pl-10 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4 focus:ring-2 focus:ring-primary/50 focus:border-primary transition outline-none">
                            </div>
                        </div>
                    </div>

                    <div class="space-y-6">
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">Gönderici Email</label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="material-icons-outlined text-gray-400 text-xl">alternate_email</span>
                                </span>
                                <input type="email" name="UserName" value="@Model.UserName" required
                                       class="w-full pl-10 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4 focus:ring-2 focus:ring-primary/50 focus:border-primary transition outline-none">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">Uygulama Şifresi</label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="material-icons-outlined text-gray-400 text-xl">key</span>
                                </span>
                                <input type="text" name="Password" value="@Model.Password" required
                                       class="w-full pl-10 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4 focus:ring-2 focus:ring-primary/50 focus:border-primary transition outline-none">
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-xl border border-gray-200 dark:border-gray-600 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="bg-blue-100 dark:bg-blue-900/30 p-2 rounded-lg text-blue-600">
                                <span class="material-icons-outlined">lock</span>
                            </div>
                            <div>
                                <h4 class="font-bold text-gray-900 dark:text-white text-sm">SSL / TLS Kullanımı</h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Şu an: @(Model.EnableSsl ? "Aktif" : "Pasif")</p>
                            </div>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="EnableSsl" value="true" class="sr-only peer" @(Model.EnableSsl ? "checked" : "")>
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
                        </label>
                    </div>

                </div>

                <div class="px-8 py-5 bg-gray-50 dark:bg-gray-700/30 border-t border-gray-100 dark:border-gray-700 flex justify-end gap-3">
                    <button type="submit" class="flex items-center gap-2 px-6 py-3 rounded-xl bg-orange-500 hover:bg-orange-600 text-white font-bold shadow-lg shadow-orange-500/30 transition transform hover:scale-105">
                        <span class="material-icons-outlined">update</span>
                        Güncelle
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>