@using MongoDB_RestaurantProject.DataTransferObject.ChefDTOs

@model ResultChefDTO

@{
    ViewData["Title"] = "Şef Detayları";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="breadcrumb-area bg-cover text-center text-light" style="background-image: url(/source/assets/img/shape/11.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <br />
                <br />
                <h1>Şef Detayları</h1>
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Anasayfa</a></li>
                    <li>Şef</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="chef-single-area bg-gray default-padding-top">
    <div class="container">
        <div class="chef-content-top">
            <div class="row align-center">
                <div class="col-lg-5 left-info">
                    <div class="thumb wow fadeInUp">
                        <img src="@Model.ImageUrl" alt="Şef Görseli">
                    </div>
                </div>

                <div class="col-lg-7 right-info pl-80 pl-md-15 pl-xs-15 wow fadeInDown">
                    <h2>@Model.NameSurname</h2>
                    <p>@Model.PositionName</p>

                    <ul>
                        <li>
                            <i class="fas fa-map-marker-alt"></i>
                            <p>@Model.Address</p>
                        </li>

                        <li>
                            <i class="fas fa-envelope"></i>
                            <a href="#">@Model.Email</a>
                        </li>

                        <li>
                            <i class="fas fa-phone-alt"></i>
                            <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                        </li>
                    </ul>

                    <div class="social">
                        <a class="btn circle btn-sm btn-theme animation" href="#">İletişime Geç</a>

                        <div class="share-link">
                            <i class="fas fa-share-alt"></i>
                            <ul>
                                <li class="facebook">
                                    <a href="@Model.FacebookUrl" target="_blank">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </li>

                                <li class="twitter">
                                    <a href="@Model.InstagramUrl" target="_blank">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>

                                <li class="youtube">
                                    <a href="@Model.LinkedInUrl" target="_blank">
                                        <i class="fab fa-linkedin"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
