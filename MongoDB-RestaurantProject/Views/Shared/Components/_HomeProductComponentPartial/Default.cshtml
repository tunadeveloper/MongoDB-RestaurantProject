@using MongoDB_RestaurantProject.DataTransferObject.ProductDTOs
@model List<ResultProductDTO>

<div class="validtheme-shop-area default-padding text-center">
    <div class="shape-seperate">
        <img src="/source/assets/img/shape/14.png" alt="Image Not Found">
        <img src="/source/assets/img/shape/15.png" alt="Image Not Found">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="site-heading text-center">
                    <h4 class="sub-title">En İyİ Fırsat</h4>
                    <h2 class="title split-text">Popüler Yemeklerimiz</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="vt-products columns-4">
                    @foreach(var item in Model.Take(8))
                    {
                        <li class="product wow fadeInUp" data-wow-delay="200ms">
                            <div class="product-contents">
                                <div class="product-image">
                                    <a href="/Product/ProductDetails/@item.Id">
                                        <img src="@item.ImageUrl" alt="Product">
                                    </a>
                                    <div class="shop-action">
                                        <ul>
                                            <li class="cart">
                                                <a href="#"><span>Sepete Ekle</span></a>
                                            </li>
                                            <li class="quick-view">
                                                <a href="#"><span>Detayları Gör</span></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product-caption">
                                    <div class="product-tags">
                                        @foreach (var ingredients in item.Ingredients)
                                        {
                                            <a href="#">@ingredients</a>
                                        }
                                    </div>
                                    <h4 class="product-title">
                                        <a href="shop-single.html">@item.ProductName</a>
                                    </h4>
                                    <div class="price">
                                        <span>@item.PriceFull₺</span>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>