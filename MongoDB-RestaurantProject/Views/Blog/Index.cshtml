@using MongoDB_RestaurantProject.DataTransferObject.BlogDTOs
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ResultBlogDTO>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="breadcrumb-area bg-cover text-center text-light" style="background-image: url(/source/assets/img/shape/11.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <br /><br />
                <h1>Blog Yazıları</h1>
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Ana Sayfa</a></li>
                    <li>Blog</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="blog-area blog-grid default-padding">
    <div class="container">
        <div class="blog-item-box">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-50">
                        <div class="home-blog-style-one-item">
                            <div class="thumb">
                                <img src="@item.ImageUrl" alt="Görsel Bulunamadı">
                                <ul class="blog-meta">
                                    <li>
                                        <a href="#">@item.CreatedAt.ToString("dd MMMM yyyy")</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="content">
                                <div class="info">
                                    <h3 class="post-title">
                                        <a href="/Blog/BlogDetails/@item.Id">@item.Title</a>
                                    </h3>
                                    <ul class="meta-tags">
                                        @foreach (var tags in item.Tags)
                                        {
                                            <li>@tags</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="row">
            <div class="col-md-12 pagi-area text-center">
                <nav aria-label="navigation">
                    <ul class="pagination">
                        @Html.PagedListPager(Model,page => Url.Action("Index", new { page }) )

                    </ul>
                </nav>
            </div>
        </div>

    </div>
</div>