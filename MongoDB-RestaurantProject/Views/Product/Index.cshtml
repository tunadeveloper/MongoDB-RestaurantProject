@model MongoDB_RestaurantProject.Models.MenuIndexViewModel
@{
    ViewData["Title"] = "Menü";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="breadcrumb-area bg-cover text-center text-light" style="background-image: url(/source/assets/img/shape/11.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <br />
                <br />
                <h1>Yemek Menüsü</h1>
                <ul class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fas fa-home"></i> Anasayfa</a></li>
                    <li>Menü</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="food-menu-area inc-isotop bg-gray default-padding">
    <div class="container">
        <div class="food-menu-area">
            <div class="row">
                <div class="col-md-12 food-menu-content text-center">

                    <div class="mix-item-menu">
                        <button class="active" data-filter="*">Tümü</button>
                        @foreach (var category in Model.Categories)
                        {
                            string filterClass = "." + category.CategoryName.ToLower().Replace(" ", "-");
                            <button data-filter="@filterClass">@category.CategoryName</button>
                        }
                    </div>

                    <div class="masonary">
                        <div id="portfolio-grid" class="food-menu-lists colums-3">

                            @foreach (var item in Model.Products)
                            {
                                string itemClass = item.CategoryName?.ToLower().Replace(" ", "-") ?? "";

                                <div class="food-menu-style-one pf-item @itemClass">
                                    <div class="item wow fadeInUp">
                                        <div class="thumb">
                                            <a href="/Product/ProductDetail/@item.Id">
                                                <img src="@item.ImageUrl" alt="@item.ProductName">
                                            </a>
                                        </div>
                                        <div class="info">
                                            <h4><a href="/Product/ProductDetail/@item.Id">@item.ProductName</a></h4>
                                            <p>
                                                @item.Description
                                            </p>
                                            <div class="food-cats">
                                                @item.CategoryName
                                            </div>
                                            <div class="item-price">
                                                <div class="left">
                                                    <span>Fiyat</span>
                                                    <h5>@item.PriceFull₺</h5>
                                                </div>
                                                <div class="right">
                                                    <a href="#"><i class="fa fa-shopping-cart"></i></a>
                                                </div>
                                            </div>
                                            <div class="button">
                                                <a href="#">Sipariş Ver</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

@await Component.InvokeAsync("_HomeFeedbackComponentPartial")

<div class="feature-style-one-area default-padding overflow-hidden">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 feature-one-single">
                <div class="feature-style-one-item wow fadeInUp">
                    <img src="/source/assets/img/icon/6.png" alt="Image Not Found">
                    <h4>En Kaliteli Yemekler</h4>
                    <p>
                        Özenle seçilmiş malzemelerle hazırlanan eşsiz lezzetlerimizi deneyimleyin.
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-one-single">
                <div class="feature-style-one-item wow fadeInDown">
                    <img src="/source/assets/img/icon/7.png" alt="Image Not Found">
                    <h4>Eve Teslim</h4>
                    <p>
                        Sıcak ve hızlı teslimat ağımızla lezzeti kapınıza kadar getiriyoruz.
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-one-single">
                <div class="feature-style-one-item wow fadeInUp">
                    <img src="/source/assets/img/icon/8.png" alt="Image Not Found">
                    <h4>Gerçek Lezzet</h4>
                    <p>
                        Usta şeflerimizin elinden çıkan tariflerle gerçek damak tadına varın.
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-one-single">
                <div class="feature-style-one-item wow fadeInDown">
                    <img src="/source/assets/img/icon/9.png" alt="Image Not Found">
                    <h4>Geleneksel Tatlar</h4>
                    <p>
                        Yöresel tarifleri modern sunumlarla birleştirerek sofranıza sunuyoruz.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>