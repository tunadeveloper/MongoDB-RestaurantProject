@using MongoDB_RestaurantProject.DataTransferObject.ContactInfoDTOs
@model ResultContactInfoDTO
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="breadcrumb-area bg-cover text-center text-light" style="background-image: url(/source/assets/img/shape/11.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <br /><br />
                <h1>Bize Ulaşın</h1>
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Ana Sayfa</a></li>
                    <li>İletişim</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="maps-area overflow-hidden">
    <div class="google-maps">
        <iframe src="@Model.MapUrl"></iframe>
    </div>
    <div class="contact-style-one-items">
        <div class="container">
            <div class="contact-style-one-box">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="contact-style-one-info">
                            <h2>Restoranımızı Keşfedin</h2>
                            <p>
                                Lezzet dolu bir deneyim için bizi ziyaret edin. Sorularınız veya rezervasyon talepleriniz için bize her zaman ulaşabilirsiniz. Ekibimiz size yardımcı olmaktan mutluluk duyacaktır.
                            </p>
                            <ul>
                                <li class="wow fadeInUp">
                                    <div class="icon">
                                        <i class="fas fa-phone-alt"></i>
                                    </div>
                                    <div class="content">
                                        <h5 class="title">Müşteri Hattı</h5>
                                        <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                    </div>
                                </li>
                                <li class="wow fadeInUp" data-wow-delay="100ms">
                                    <div class="icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div class="info">
                                        <h5 class="title">Adresimiz</h5>
                                        <p>
                                            @Model.Address
                                        </p>
                                    </div>
                                </li>
                                <li class="wow fadeInUp" data-wow-delay="200ms">
                                    <div class="icon">
                                        <i class="fas fa-envelope-open-text"></i>
                                    </div>
                                    <div class="info">
                                        <h5 class="title">E-posta Adresimiz</h5>
                                        <a href="mailto:@Model.email">@Model.email</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_ContactMessageComponentPartial")